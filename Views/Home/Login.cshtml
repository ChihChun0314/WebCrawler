@{
    ViewData["Title"] = "登入";
}

<body>
    <div class="container text-center" style="margin-top: 0px;">
        <div class="row">
            <!--<div class="col">
                <img src="show.jpg">
            </div>-->
            <div class="col-4"></div>
            <div class="col-12" id="a">
                <div id="accordion">
                    @ViewBag.complete
                    <div class="card">
                        <div class="card-header">
                            <a class="btn" data-bs-toggle="collapse" href="#collapseOne">
                                點我登入
                            </a>
                        </div>
                        <div id="collapseOne" class="collapse show" data-bs-parent="#accordion">
                            <div class="card-body">
                                <form asp-action="Login_Check">
                                    <input type="text" style="margin-top: 10px;" placeholder="Email" class="form-control" name="Email">
                                    <input type="password" style="margin-top: 10px;" placeholder="Password" class="form-control"name="Password">
                                    <input type="submit" style="margin-top: 10px;" value="登入"
                                        class="btn btn-secondary barbtn">
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header text-wrap">
                            <a class="collapsed btn" data-bs-toggle="collapse" href="#collapseTwo">
                                加入我們
                            </a>
                        </div>
                        <div id="collapseTwo" class="collapse" data-bs-parent="#accordion">
                            <div class="card-body">
                                <form asp-action="Register_Join">
                                    <input class="form-control" style="margin-top: 10px;" type="text" name="UName"
                                        placeholder="Name" required="">
                                    <input class="form-control" style="margin-top: 10px;" type="tel" name="PhoneNumber"
                                        placeholder="Phone_number" required="">
                                    <input class="form-control" style="margin-top: 10px;" type="email" name="UEmail"
                                        placeholder="Email" required="">
                                    <input class="form-control" style="margin-top: 10px;" type="password"
                                        name="UPassword" placeholder="Password" required="" id="UPassword">
                                    <input class="form-control" style="margin-top: 10px;" type="password"
                                        name="rePassword" placeholder="Password" required="" id="rePassword" onblur="ck()">
                                    <a class="tip">密碼不一致</a><br/>
                                    <input type="submit" style="margin-top: 10px;" value="送出審核"
                                        class="btn btn-secondary barbtn">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
    <script>
        $(".tip").hide();
        function ck(){
            var pwd1 = document.getElementById(UPassword).value;
            var pwd2 = document.getElementById(rePassword).value;
            if(pwd1 != pwd2){
                $(".tip").show();
            }else{
                $(".tip").hide();
            }
        }
    </script>
</body>
