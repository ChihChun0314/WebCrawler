@{
    ViewData["Title"] = "新增專案";
}
<style type="text/css"> 
   input[type="radio"]{
  margin: 0 20px 0 20px;
}
</style>

<body>
    <div class="container text-center" style="margin-top: 0px;">
        @*<h6 align="right">@Context.Session.GetString("UserName")</h6>*@
    </div>
    <div style="margin-top: 10px;">
        <h2>新增專案</h2>
    </div>
    <div class="card-body">
        <div class="container">
            <form class="form-check" asp-action="Set_Interval">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="form-floating">
                            <input type="text" id="title" required="required" placeholder="自訂標題" class="form-control" name="WebName">
                            <label for="title">自訂標題:</label>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="form-floating">
                            <input type="text" id="URL" required="required" placeholder="網址" class="form-control" name="Url">
                            <label for="URL">網址:</label>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <select class="form-select" name="time" aria-label="Default select example">
                            <option selected>設定頻率</option>
                            <option value="1">每天(Day)</option>
                            <option value="2">每周(Week)</option>
                            <option value="3">每月(Month)</option>
                            <option value="4">每年(Year)</option>
                        </select>
                    </li>
                    <li class="list-group-item">
                        <div class="form-floating">
                            <input class="form-control" id="TM" type="text" value="@TempData["date"]" required="required" placeholder="時間" readonly>
                            <label for="TM">現在時間:</label>
                        </div>
                    </li>
                    
                </ul>
                <br />
                @*<div class="row justify-content-md-center">
                    <div class="col col-lg-2">
                        <h4 class="h4">頻率</h4>
                    </div>
                    <div class="col-md-auto">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="time" id="t1" value="1" checked>
                            <label class="form-check-label" for="t1">
                                每天
                            </label>
                        &emsp;&emsp;&emsp;
                            <input class="form-check-input" type="radio" name="time" value="2" id="t2">
                            <label class="form-check-label" for="t2">
                                每周
                            </label>
                        &emsp;&emsp;&emsp;
                            <input class="form-check-input" type="radio" name="time" value="3" id="t3">
                            <label class="form-check-label" for="t3">
                                每月
                            </label>
                        &emsp;&emsp;&emsp;
                            <input class="form-check-input" type="radio" name="time" value="4" id="t4">
                            <label class="form-check-label" for="t4">
                                每年
                            </label>
                        </div>
                    </div>
                </div>*@
                
                <input class="btn btn-primary" type="submit" value="確認" />
                <h5>@ViewBag.interval</h5>
            </form>
        </div>
    </div>
</body>
