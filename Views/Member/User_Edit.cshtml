@if(TempData["success"]!=null){
	<h2>@TempData["success"]</h2>
}
<form method="post" asp-action="User_Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Userdata</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<input type="hidden" name="UId" asp-for="UId"/>
		<div class="mb-3">
			<label value="帳號名稱">帳號名稱</label>
			<input type="text" name="UName" asp-for="UName" class="form-control" />
		</div>
		<div class="mb-3">
			<label value="Email">電子郵件</label>
			<input type="text" name="UEmail" asp-for="UEmail" class="form-control" />
		</div>
		<div class="mb-3">
			<label value="密碼">密碼</label>
			<input type="text" name="UPassword" asp-for="UPassword" class="form-control" />
		</div>
		<div class="mb-3">
			<label value="電話號碼">電話號碼</label>
			<input type="text" name="PhoneNumber" asp-for="PhoneNumber" class="form-control" />
		</div>
		@if(Context.Session.GetInt32("UserId") == null){
			<div class="mb-3">
				<label value="權限">權限</label>
				<select asp-for="Permission">
			        <option >請輸入權限代碼</option>
			        <option value="Z">審核中</option>
			        <option value="A">A權限</option>
			        <option value="B">B權限</option>
			        <option value="X">停權中</option>                         
			    </select>
			</div>
		}else{
			<input type="hidden" name="Permission" asp-for="Permission"/>
		}

		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		@if(Context.Session.GetInt32("UserId") != null){
			<a asp-controller="Member" asp-action="User_Self" class="btn btn-secondary" style="width:150px">
				Back to User
			</a>
		}else{
			<a asp-controller="Member" asp-action="Search_User" class="btn btn-secondary" style="width:150px">
				Back to search
			</a>
		}

	</div>
</form>