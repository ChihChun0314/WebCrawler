
@model IEnumerable<WebCrawler.Models.User_Message>
<div class="card">
    <div class="card-header">
        <div class=row>
            
            <div class="col-1 justify-content-end">
              <a class="btn btn-primary" asp-action="Message_Create">新增訊息</a>
            </div>

            <div class="col-11">
              <h5>訊息</h5>
            </div>
        
            
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <th scope="col">使用者</th>
                <th scope="col">標題</th>
                <th scope="col">公佈日期</th>
                <th scope="col">選項</th>
            </thead>
            <tbody>
                @foreach(var i in Model)
                {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(model => i.UName)
                        </td>
                        <td>
                            <span class="d-inline-block text-truncate" style="max-width: 390px;">@Html.DisplayFor(model => i.Title)</span>
                        </td>
                        <td>
                            <span class="d-inline-block text-truncate" style="max-width: 390px;">@Convert.ToDateTime(i.Date).ToString("yyyy/MM/dd")</span>
                        </td>
                        <td>
                            <a role="button" class="btn btn-success barbtn" asp-action="Message_Edit" asp-route-id="@i.MesId">編輯</a>
                            <a role="button" class="btn btn-danger barbtn" asp-action="Message_del" asp-route-id="@i.MesId" onclick="return confirm('Are you sure you want to delete this?')" >刪除</a>
                        </td>
                    </tr>       
                }
            </tbody>
        </table>
        @if (Model.Any()==false)
        {
            <div class="alert alert-secondary" role="alert">
                <p class="h4">目前無訊息紀錄</p>
            </div>
        }
    </div>
</div>