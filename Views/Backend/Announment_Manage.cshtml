@model IEnumerable<WebCrawler.Models.Announment>
@{
}
<div class="card">
    <div class="card-header">
        <div class=row>
            <div class="col-1">

            </div>
            <div class="col-9">
              <h5>公告</h5>
            </div>
        
            <div class="col-2 justify-content-end">
              <a class="btn btn-primary" asp-action="Announment_Create">新增公告</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        
            <div class="row mb-3">
                <div class="col-3"><h5>標題</h5></div>
                <div class="col-5"><h5>內容</h5></div>
                <div class="col-4"><h5>選項</h5></div>
           </div>   
        @foreach(var i in Model)
        {
           <div class="row mb-3">
                <div class="col-3"><h5>@Html.DisplayFor(model => i.Title)</h5></div>
                <div class="col-5">@Html.DisplayFor(model => i.Content)</div>
                <div class="col-4 btn-group justify-content-center"><a class="btn btn-info" asp-action="Announment_Edit" asp-route-id="@i.AnnoId">編輯</a>
                    <a class=" btn btn-info" asp-action="Announment_del" asp-route-id="@i.AnnoId" onclick="return confirm('Are you sure you want to delete this?')" >刪除</a></div>
           </div>           
        }
        
    </div>
</div>