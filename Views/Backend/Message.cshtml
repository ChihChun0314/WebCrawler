@model IEnumerable<WebCrawler.Models.Message>
@{
    ViewData["Title"] = "訊息通知";
}
<div class="card">
    <div class="card-header">
        <h5>訊息通知</h5>
    </div>
    <div class="card-body">
        @if (Model.Any()==false)
        {
            <div class="alert alert-secondary" role="alert">
                <p class="h4">目前無通知訊息</p>
            </div>
        }
        <ul class="list-group list-group-flush">
            @foreach(var i in Model)
            {
                <a class="btn btn-outline-secondary" asp-action="Message_Content" asp-route-id="@i.MesId">
                        @Html.DisplayFor(model => i.Title)&emsp;公佈日期:@Html.DisplayFor(model => i.Date)
                </a>
                <br><br>
            }
        </ul>
    </div>
</div>