@model IEnumerable<WebCrawler.Models.Announment>
@{
    ViewData["Title"] = "首頁";
}
<div class="card">
    <div class="card-header">
        <h5>公告</h5>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            @foreach(var i in Model)
            {
                <li class="list-group-item"><a asp-action="Message_Content" asp-route-id="@i.AnnoId">@Html.DisplayFor(model => i.Title)</a></li>
            }
        </ul>
    </div>
</div>
