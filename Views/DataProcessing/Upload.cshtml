@{
    ViewData["Title"] = "檔案上傳";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    
    <form asp-action="uploadFile">
        <div class="card-body text-s">

            <div class="alert alert-primary" role="alert">
                離線上傳檔案<br><br>
                說明：上傳檔案類型總共分為HTML、Excel、Word、文字檔、PDF，<br>
                檔案上傳結束後，選擇下載位置，為您存取檢測資料。<br>
            </div>
        </div>
        <input class="btn btn-primary" type="submit" style="margin-top: 10px;" value="上傳檔案" />
    </form>
